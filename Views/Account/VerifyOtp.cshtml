@model CollegeManagement.Models.ViewModels.Account.VerifyOtpViewModel

@{
    ViewBag.Title = "Verify OTP";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Verify OTP</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="VerifyOtp" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Identifier">Email / Phone</label>
                            <input asp-for="Identifier" class="form-control" readonly />
                            <span asp-validation-for="Identifier" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Otp">Enter OTP</label>
                            <input asp-for="Otp" class="form-control" />
                            <span asp-validation-for="Otp" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Verify OTP</button>
                        </div>

                        <div asp-validation-summary="All" class="text-danger mt-2"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
