@model CollegeManagement.Models.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="forgot-wrapper d-flex justify-content-center align-items-center">
    <div class="forgot-card shadow">

        <!-- HEADER -->
        <div class="header px-4 py-4">
            <h2 class="title">Reset Your Password</h2>
            <p class="subtitle">Create a strong and secure password for your account.</p>
        </div>

        <!-- BODY -->
        <div class="body px-4 pb-4 pt-0">

            <form asp-controller="Account" asp-action="ResetPassword" method="post">

                <!-- New Password -->
                <div class="form-group mb-4">
                    <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                    <input asp-for="NewPassword" class="form-control custom-input" type="password" placeholder="Enter new password" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                    <input asp-for="ConfirmPassword" class="form-control custom-input" type="password" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button class="btn success-btn w-100">
                    Reset Password
                </button>

                <div asp-validation-summary="All" class="text-danger mt-3"></div>
            </form>

            <div class="text-center mt-4">
                <a asp-controller="Student" asp-action="StudentLogin" class="back-link">
                    ← Back to Login
                </a>
            </div>

        </div>
    </div>
</div>

<style>

    body {
        background: #eef3f8 !important;
        font-family: "Inter", "Segoe UI", sans-serif;
    }

    .forgot-wrapper {
        height: 100vh;
    }

    .forgot-card {
        width: 480px;
        background: white;
        border-radius: 22px;
        overflow: hidden;
        animation: fadeIn 0.5s ease;
    }

    /* Header Area */
    .header {
        text-align: center;
    }

    .title {
        font-size: 28px;
        font-weight: 700;
        color: #354f52;
        margin-bottom: 4px;
    }

    .subtitle {
        font-size: 15px;
        color: #6b7b7d;
    }

    /* Inputs */
    .custom-input {
        height: 48px;
        border-radius: 12px;
        border: 1px solid #d2d9df;
        padding-left: 15px;
        font-size: 15px;
        transition: 0.2s ease-in-out;
    }

    .custom-input:focus {
        border-color: #6db3b8;
        box-shadow: 0 0 0 0.15rem rgba(109, 179, 184, 0.3);
    }

    /* Buttons */
    .success-btn {
        background: #5cb85c;
        color: white;
        font-weight: 600;
        padding: 12px;
        font-size: 16px;
        border-radius: 12px;
        border: none;
        transition: 0.2s ease;
    }

    .success-btn:hover {
        background: #4e9e4e;
    }

    /* Back link */
    .back-link {
        color: #526b72;
        font-weight: 600;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    /* Animation */
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }

</style>
