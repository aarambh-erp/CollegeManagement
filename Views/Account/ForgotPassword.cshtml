@model CollegeManagement.Models.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="forgot-wrapper d-flex justify-content-center align-items-center">
    <div class="forgot-card shadow">

        <!-- HEADER -->
        <div class="header px-4 py-4">
            <h2 class="title">Forgot Password?</h2>
            <p class="subtitle">Enter the email or phone number linked to your account.</p>
        </div>

        <div class="body px-4 pb-4 pt-0">

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center fw-semibold mb-3">
                    @TempData["Message"]
                </div>
            }

            <!-- STEP 1: SEND OTP -->
            @if (!Model.IsOtpSent)
            {
                <form asp-action="SendOtp" method="post">

                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">Email or Phone</label>
                        <input asp-for="Identifier" class="form-control custom-input" placeholder="Enter your email or phone" />
                        <span asp-validation-for="Identifier" class="text-danger small"></span>
                    </div>

                    <button class="btn main-btn w-100">
                        Send OTP
                    </button>
                </form>
            }
            else
            {
                <!-- STEP 2: ENTER OTP -->
                <form asp-action="VerifyOtp" method="post">

                    <input type="hidden" asp-for="Identifier" />

                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">Sending To</label>
                        <input class="form-control custom-input bg-light" readonly value="@Model.Identifier" />
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">Enter OTP</label>
                        <input asp-for="Otp" class="form-control otp-input text-center" maxlength="6" placeholder="● ● ● ● ● ●" />
                        <span asp-validation-for="Otp" class="text-danger small"></span>
                    </div>

                    <button class="btn success-btn w-100">
                        Verify OTP
                    </button>
                </form>

                <form asp-action="SendOtp" method="post" class="text-center mt-3">
                    <input type="hidden" asp-for="Identifier" />
                    <button class="btn resend-btn">
                        Resend OTP
                    </button>
                </form>
            }

            <div class="text-center mt-4">
                <a asp-controller="Student" asp-action="StudentLogin" class="back-link">
                    ← Back to Login
                </a>
            </div>

        </div>
    </div>
</div>

<!-- CUSTOM STYLES -->
<style>

    body {
        background: #eef3f8 !important;
        font-family: "Inter", "Segoe UI", sans-serif;
    }

    .forgot-wrapper {
        height: 100vh;
    }

    .forgot-card {
        width: 480px;
        background: white;
        border-radius: 22px;
        overflow: hidden;
        animation: fadeIn 0.5s ease;
    }

    /* Header */
    .header {
        text-align: center;
    }

    .title {
        font-size: 30px;
        font-weight: 700;
        color: #354f52;
        margin-bottom: 5px;
    }

    .subtitle {
        font-size: 15px;
        color: #6b7b7d;
    }

    /* Inputs */
    .custom-input {
        height: 48px;
        border-radius: 12px;
        border: 1px solid #d2d9df;
        padding-left: 15px;
        font-size: 15px;
        transition: 0.2s ease-in-out;
    }

    .custom-input:focus {
        border-color: #6db3b8;
        box-shadow: 0 0 0 0.15rem rgba(109, 179, 184, 0.3);
    }

    /* OTP input */
    .otp-input {
        height: 55px;
        border-radius: 12px;
        font-size: 26px;
        letter-spacing: 12px;
        border: 1px solid #d2d9df;
    }

    /* Buttons */
    .main-btn {
        background: #6db3b8;
        color: white;
        font-weight: 600;
        padding: 12px;
        border-radius: 12px;
        border: none;
        font-size: 16px;
        transition: 0.2s;
    }

    .main-btn:hover {
        background: #5aa0a4;
    }

    .success-btn {
        background: #5cb85c;
        color: white;
        font-weight: 600;
        padding: 12px;
        font-size: 16px;
        border-radius: 12px;
        border: none;
    }

    .success-btn:hover {
        background: #4e9e4e;
    }

    .resend-btn {
        background: none;
        border: none;
        color: #6db3b8;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
    }

    .resend-btn:hover {
        text-decoration: underline;
    }

    /* Back link */
    .back-link {
        color: #526b72;
        font-weight: 600;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    /* Animation */
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }

</style>
