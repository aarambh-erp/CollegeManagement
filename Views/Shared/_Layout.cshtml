<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollegeManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CollegeManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* ===== Global Background ===== */
        body {
            background-color: #f4f6f9 !important;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* ===== NAVBAR (Dark Premium) ===== */
        .navbar-custom {
            background-color: #1A2530 !important;
            box-shadow: 0px 3px 10px rgba(0,0,0,0.3);
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #ecf0f1 !important;
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover {
                    color: #3498db !important;
                }

        /* ===== CONTAINER (White Card Look) ===== */
        .main-wrapper {
            background: #ffffff;
            padding: 2rem;
            margin-top: 25px;
            border-radius: 14px;
            box-shadow: 0px 10px 25px rgba(0,0,0,0.08);
        }

        /* ===== FOOTER ===== */
        footer {
            background: #1A2530;
            padding: 15px 0;
            color: #bdc3c7;
            font-size: 14px;
            text-align: center;
            margin-top: 40px;
        }

            footer a {
                color: #3498db !important;
                text-decoration: none;
            }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ===== NAVBAR ===== -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom navbar-dark border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    IIT Kharagpur
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Student" asp-action="StudentLogin">Student Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== MAIN CONTENT ===== -->
    <div class="container">
        <div class="main-wrapper">
            @RenderBody()
        </div>
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="text-muted">
        <div class="container">
            &copy; 2025 - CollegeManagement -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
