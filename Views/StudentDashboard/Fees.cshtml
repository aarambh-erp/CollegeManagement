@model List<CollegeManagement.Models.Fees.Fee>
@{
    Layout = "_StudentLayout";
    ViewBag.ActiveTab = "Fees";
}

<h2 class="mb-4">My Fee Details</h2>

<!-- Pending Dues -->
<h4 class="text-danger mb-3">Pending Payments</h4>

@if (Model.Any(f => f.PaymentStatus == "Due"))
{
    <table class="table table-bordered shadow-sm">
        <thead class="table-danger">
            <tr>
                <th>Fee Type</th>
                <th>Amount</th>
                <th>Due Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fee in Model.Where(f => f.PaymentStatus == "Due"))
            {
                <tr>
                    <td>@fee.FeeType</td>
                    <td>₹@fee.Amount</td>
                    <td>@fee.PaymentDate.ToString("dd MMM yyyy")</td>
                    <td>
                        <a asp-controller="StudentDashboard" asp-action="Payfee" asp-route-id ="@fee.Id" class="btn btn-success btn-sm">
                            Pay Now
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-success">No pending dues 🎉</p>
}

<hr />

<!-- Payment History -->
<h4 class="mt-4">Payment History</h4>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>Fee Type</th>
            <th>Amount</th>
            <th>Payment Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fee in Model)
        {
            <tr>
                <td>@fee.FeeType</td>
                <td>₹@fee.Amount</td>
                <td>@fee.PaymentDate.ToString("dd MMM yyyy")</td>
                <td>
                    @if (fee.PaymentStatus == "Paid")
                    {
                        <span class="badge bg-success">Paid</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Due</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
