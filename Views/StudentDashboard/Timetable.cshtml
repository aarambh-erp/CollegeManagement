@model List<CollegeManagement.Models.Timetables.Timetable>
@{
    Layout = "_StudentLayout";
    ViewBag.ActiveTab = "Timetable";
}

<h2 class="mb-4 text-center">My Weekly Timetable</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Day</th>
                <th>Time</th>
                <th>Course</th>
                <th>Lecturer</th>
                <th>Room</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model.OrderBy(m => m.Day).ThenBy(m => m.StartTime))
            {
                <tr class="course-row">
                    <td>@t.Day</td>
                    <td>@t.StartTime.ToString(@"hh\:mm") - @t.EndTime.ToString(@"hh\:mm")</td>
                    <td>@t.Course?.CourseName</td>
                    <td>@t.Lecturer?.Name</td>
                    <td>@t.Room?.RoomNo</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Table hover effect */
    .table-striped tbody tr:hover {
        background-color: #f0f8ff;
        transition: background-color 0.3s;
    }

    /* Course color highlights */
    .course-row td:nth-child(3) {
        font-weight: 600;
        color: #0d6efd; /* Bootstrap primary color */
    }

    /* Room number style */
    .course-row td:nth-child(5) {
        font-style: italic;
        color: #6c757d;
    }

    /* Responsive table */
    .table-responsive {
        overflow-x: auto;
    }

    /* Header styling */
    .table-dark th {
        background-color: #343a40;
        color: white;
        text-align: center;
    }

    /* Center align cells */
    .table td {
        vertical-align: middle;
    }
</style>
