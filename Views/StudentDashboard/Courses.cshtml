@model List<CollegeManagement.Models.Courses.Course>
@{
    Layout = "_StudentLayout";
    ViewBag.ActiveTab = "Courses";
}

<div class="container mt-4">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-journal-bookmark-fill text-primary"></i> My Courses
    </h2>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="py-3">Course Name</th>
                        <th class="py-3">Code</th>
                        <th class="py-3">Lecturer</th>
                        <th class="py-3 text-center">Credits</th>
                        <th class="py-3 text-center">Status</th>
                        <th class="py-3 text-center">Semester</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-semibold">@course.CourseName</td>
                            <td><span class="badge bg-secondary">@course.CourseCode</span></td>
                            <td>@course.Lecturer?.Name</td>

                            <td class="text-center fw-bold">
                                <span class="badge bg-info text-dark px-3 py-2">
                                    @course.Credits
                                </span>
                            </td>

                            <td class="text-center">
                                @if (course.Status == "Active")
                                {
                                    <span class="badge bg-success px-3 py-2">Active</span>
                                }
                                else if (course.Status == "Completed")
                                {
                                    <span class="badge bg-dark px-3 py-2">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark px-3 py-2">Pending</span>
                                }
                            </td>

                            <td class="text-center">
                                <span class="badge bg-primary px-3 py-2">
                                    @course.Semester
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>