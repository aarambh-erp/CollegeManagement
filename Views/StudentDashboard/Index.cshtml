@model CollegeManagement.Models.ViewModels.StudentDashboardViewModel; 
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .dashboard-container {
            display: flex;
            min-height: calc(100vh - 120px); /* Adjust based on your header/footer height */
        }

        .sidebar {
            width: 260px;
            background: linear-gradient(180deg, #2c3e50 0%, #1a2530 100%);
            color: white;
            padding-top: 2rem;
            box-shadow: 4px 0 15px rgba(0,0,0,0.2);
            flex-shrink: 0;
        }

            .sidebar .logo {
                font-size: 1.8rem;
                font-weight: 700;
                text-align: center;
                margin-bottom: 3rem;
                color: #3498db;
                text-shadow: 0 2px 5px rgba(0,0,0,0.3);
            }

            .sidebar .nav-link {
                color: #bdc3c7;
                padding: 14px 20px;
                margin: 8px 15px;
                border-radius: 12px;
                font-weight: 500;
                transition: all 0.3s ease;
                display: flex;
                align-items: center;
                gap: 12px;
            }

                .sidebar .nav-link:hover {
                    background-color: rgba(52, 152, 219, 0.3);
                    color: white;
                    transform: translateX(8px);
                }

                .sidebar .nav-link.active {
                    background: #3498db;
                    color: white;
                    box-shadow: 0 4px 15px rgba(52, 152, 219, 0.4);
                    font-weight: 600;
                }

        .main-content {
            flex-grow: 1;
            padding: 2.5rem;
        }

        .welcome-card {
            background: white;
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

            .welcome-card h2 {
                color: #2c3e50;
                font-weight: 700;
            }

            .welcome-card p {
                color: #7f8c8d;
                font-size: 1.1rem;
            }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .stat-card {
            background: white;
            padding: 1.8rem;
            border-radius: 14px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.08);
            text-align: center;
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-8px);
            }

            .stat-card h3 {
                font-size: 2.2rem;
                margin: 0;
                color: #3498db;
            }

        @@media (max-width: 992px) {
            .dashboard-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
                padding-top: 1rem;
                position: relative;
            }

                .sidebar .nav-link {
                    justify-content: center;
                }

                    .sidebar .logo, .sidebar .nav-link span {
                        display: block;
                    }

            .main-content {
                padding: 1.5rem;
            }
        }
    </style>
}

@{
    Layout = "_StudentLayout";
    ViewBag.ActiveTab = "Dashboard"; 
}

<div class="main-content">
    <div class="welcome-card">
        <h2>Welcome back, <strong>@Model.StudentName!</strong></h2>
        <p>Ready to continue your learning journey? Select an option from the sidebar to get started.</p>
    </div>

    <div class="stats-grid">

        <div class="stat-card">
            <i class="bi bi-book-half text-primary" style="font-size: 2.5rem;"></i>
            <h3>@Model.TotalCourses</h3>
            <p class="text-muted">Enrolled Courses</p>
        </div>

        <div class="stat-card">
            <i class="bi bi-calendar-check text-success" style="font-size: 2.5rem;"></i>
            <h3>@Model.UpcomingAssignments</h3>
            <p class="text-muted">Upcoming Assignments</p>
        </div>

        <div class="stat-card">
            <i class="bi bi-award text-warning" style="font-size: 2.5rem;"></i>
            <h3>@Model.AverageGrade%</h3>
            <p class="text-muted">Average Grade</p>
        </div>
    </div>

</div>
