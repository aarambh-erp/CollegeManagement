@model CollegeManagement.Models.Student.StudentLogin

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student Portal Login</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/studentlogin.css" rel="stylesheet" />
</head>

<body>

    <div class="login-container">

        <!-- LEFT DARK PANEL -->
        <div class="left-panel d-flex align-items-center justify-content-center">
            <div class="login-card">
                <h2 class="login-title">Login</h2>
                <p class="login-subtitle">Enter your account details</p>

                <form asp-controller="Student" asp-action="StudentLogin" method="post">

                    <div class="input-wrapper">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="Username" />
                    </div>

                    <div class="input-wrapper">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Password" type="password" />
                    </div>

                    <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-link">Forgot Password?</a>

                    <button type="submit" class="login-btn">Login</button>

                </form>
            </div>
        </div>

        <!-- RIGHT PURPLE PANEL -->
        <div class="right-panel">
            <div class="purple-card">
                <h1 class="welcome-heading">
                    Welcome to <br />
                    <span>student portal</span>
                </h1>

                <p class="welcome-subtitle">Login to access your account</p>

                <img src="/images/student-illustration.jpeg" class="welcome-illustration" />
            </div>
        </div>

    </div>

</body>
</html>
